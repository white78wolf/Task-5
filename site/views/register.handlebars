<div class="regform">
    {{#if warning}}
    <span style="color:lime;font-size:1.2em;">You have to register your account.</span>
    {{/if}}
    <h3>Register your account:</h3>    
    <form role="form" action="/register" method="POST">
        <input type="text" name="name"><label for="name">Name</label><br>
        <input type="text" name="surname"><label for="surname">Surname</label><br>
        <input type="email" name="email"><label for="email">E-mail</label>
        {{#if already}}
        <span style="color:red;">User with this email already exists!</span>
        {{/if}}<br>
        <input type="password" name="password"><label for="password">Your password</label><br>        
        <button type="reset">Reset</button>
        <button type="submit">Submit</button>
    </form>
</div>